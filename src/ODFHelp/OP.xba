REM *****
function onSelQACateList(e)
	selCateIdx = e.selected
	e.source.Context.getControl(&quot;ComboBox2&quot;).model.stringItemList =_
		pyGetQAForumList(selCateIdx, -1)
end function

REM *****
REM **選取分類二
REM *****
function onSelQAForumList(e)
	selForumIdx = e.selected
end function
