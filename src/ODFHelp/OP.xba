	If msgbox(&quot;確定登出?&quot;, MB_YESNO + MB_DEFBUTTON2 + MB_ICONQUESTION,&quot;Q&amp;A問題回報&quot;) = IDYES Then
		save2UserConfig(&quot;&quot;, &quot;&quot;, &quot;&quot;)  &apos; truncate
		e.Source.Context.endDialog(0)
	EndIf
End Sub

REM *****
